<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".LoginOTPActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ff"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll"
            android:visibility="visible"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_back_product_detail"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/ibm_regular"
                    android:gravity="center"
                    android:importantForAutofill="no"
                    android:inputType="textFilter"
                    android:singleLine="true"
                    android:text="@string/verification"
                    android:textAlignment="gravity"
                    android:textColor="#1E1C1C"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded,TextFields,TextViewEdits" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlv1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_rectangle"
            android:orientation="vertical" >

            <androidx.core.widget.NestedScrollView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_data"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:contentDescription="@string/app_name"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/otp_verify_icon"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/ibm_regular"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="@string/txt_verification"
                        android:textColor="@color/black"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rectance_shape"
                            android:textColorHint="@color/black"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ed_otp1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:text="@string/dash"
                            android:layout_width="20dp"
                            android:fontFamily="@font/opensans_bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rectance_shape"
                            android:textColorHint="@color/black"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ed_otp2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:background="@null"
                                android:maxLength="1"
                                android:textStyle="bold"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:text="@string/dash"
                            android:layout_width="20dp"
                            android:fontFamily="@font/opensans_bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rectance_shape"
                            android:textColorHint="@color/black"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ed_otp3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:background="@null"
                                android:maxLength="1"
                                android:textStyle="bold"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:text="@string/dash"
                            android:layout_width="20dp"
                            android:fontFamily="@font/opensans_bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/rectance_shape"
                            android:textColorHint="@color/black"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ed_otp4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:gravity="center"
                                android:background="@null"
                                android:layout_marginBottom="10dp"
                                android:maxLength="1"
                                android:textStyle="bold"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnOTPVerifiy"
                        android:layout_width="match_parent"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/login_or_sign_up_ctm_bg"
                        android:fontFamily="@font/philosopher_regular"
                        android:gravity="center"
                        android:text="@string/txt_verify"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16sp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLinSubmitustomer"
                        android:layout_width="match_parent"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/login_or_sign_up_ctm_bg"
                        android:fontFamily="@font/philosopher_regular"
                        android:gravity="center"
                        android:text="@string/txt_resend"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>

