<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".RegistrationPhoneSubmitOTPVerificationActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_try_again"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_oops_something_went_wrong"
            android:textColor="@color/black"
            android:text="@string/something_went"
            android:textSize="16sp"
            android:singleLine="true"
            android:fontFamily="@font/philosopher"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_try_again"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_oops_something_went_wrong"
            android:text="@string/txt_try_again"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:singleLine="true"
            android:fontFamily="@font/philosopher"
            android:background="@drawable/login_or_sign_up_ctm_bg"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_internet"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_no_internet"
            android:textColor="@color/black"
            android:text="@string/no_internet_connection"
            android:textSize="16sp"
            android:singleLine="true"
            android:fontFamily="@font/philosopher"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_no_internet"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_no_internet"
            android:text="@string/reload_page"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:singleLine="true"
            android:fontFamily="@font/philosopher"
            android:background="@drawable/login_or_sign_up_ctm_bg"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_record_found"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/no_record_found"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="@string/no_record_found"
            android:textSize="16sp"
            android:fontFamily="@font/philosopher"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_layout_customer_registration_phone_otp_verification_not_exist_user"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll"
            android:visibility="visible"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_back_product_detail"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/login_or_sign_up_bg_color"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/ibm_regular"
                    android:gravity="center"
                    android:importantForAutofill="no"
                    android:inputType="textFilter"
                    android:singleLine="true"
                    android:text="@string/verification"
                    android:textAlignment="gravity"
                    android:background="@color/login_or_sign_up_bg_color"
                    android:textColor="@color/login_or_sign_up_bg_color"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded,TextFields,TextViewEdits" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlv1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_rectangle"
            android:orientation="vertical" >

            <androidx.core.widget.NestedScrollView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_data"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:contentDescription="@string/app_name"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="40dp"
                        android:background="@color/login_or_sign_up_bg_color"
                        android:layout_marginStart="40dp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/ibm_regular"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:background="@color/login_or_sign_up_bg_color"
                        android:text="@string/txt_verification"
                        android:textColor="@color/login_or_sign_up_bg_color"/>


                    <LinearLayout
                        android:id="@+id/root_otp_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:weightSum="4">

                        <EditText
                            android:id="@+id/ed_otp1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textSize="16sp"
                            android:background="@drawable/login_or_sign_up_ctm_bg"/>

                        <TextView
                            android:text="@string/dash"
                            android:layout_width="20dp"
                            android:fontFamily="@font/opensans_bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/ed_otp2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:inputType="number"
                            android:maxLength="1"
                            android:background="@drawable/login_or_sign_up_ctm_bg"/>

                        <TextView
                            android:text="@string/dash"
                            android:layout_width="20dp"
                            android:fontFamily="@font/opensans_bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/ed_otp3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:inputType="number"
                            android:maxLength="1"
                            android:background="@drawable/login_or_sign_up_ctm_bg"/>

                        <TextView
                            android:text="@string/dash"
                            android:layout_width="20dp"
                            android:fontFamily="@font/opensans_bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/ed_otp4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:inputType="number"
                            android:maxLength="1"
                            android:background="@drawable/login_or_sign_up_ctm_bg" />


                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnOTPVerify"
                        android:layout_width="match_parent"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/login_or_sign_up_ctm_bg"
                        android:fontFamily="@font/philosopher_regular"
                        android:gravity="center"
                        android:text="@string/txt_verify"
                        android:textAllCaps="false"
                        android:textColor="@color/login_or_sign_up_bg_color"
                        android:textSize="16sp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnOTPResend"
                        android:layout_width="match_parent"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/login_or_sign_up_ctm_bg"
                        android:fontFamily="@font/philosopher_regular"
                        android:gravity="center"
                        android:text="@string/txt_resend"
                        android:textAllCaps="false"
                        android:textColor="@color/login_or_sign_up_bg_color"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

